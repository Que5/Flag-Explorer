{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",          

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom additions for your migration */
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    // Ensure these match your React 18.2.0:
    "types": ["react", "react-dom"] // This is generally good practice
  },
  "include": ["src", "vite-env.d.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"] // Good to explicitly exclude
}
