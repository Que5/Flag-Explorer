{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom additions for your migration */
    "allowJs": true,           // Allows TypeScript to process JavaScript files
    "checkJs": true,           // Enables semantic checking in JavaScript files (optional, but good for catching issues)
    "esModuleInterop": true,   // Provides better compatibility for default exports
    "baseUrl": "./src",        // For absolute imports like '@/components/FlagGrid.js'
    "paths": {
      "@/*": ["*"]
    },
    // Ensure these match your React 18.2.0:
    "types": ["react", "react-dom"]
  },
  "include": ["src", "vite-env.d.ts", "vitest.config.ts"], // Ensure 'src' and test config are included
  // REMOVED: "references": [{ "path": "./tsconfig.node.json" }]
}